<style define:vars={{ imgScale }}>

	body {
		margin: 0px;
		padding: 0em;
		background-color: white;
		overflow:hidden ;
	}

	#flexbox1 {
		margin: auto;
		display: flex;
		flex-direction: column;
	}

	

	h1 {
		line-height: normal;
		color: black;	
		text-align: center;
		font-family: 'Hepta Slab Variable', serif;	
		margin-bottom: 20px;
		margin-top: 10px;
	}

	h2 {
		font-family: 'Hepta Slab Variable', serif;	
		text-align: center;
	}

	#footer {
		position:absolute;
		bottom: 0;
		width: 100%;
		display: flex;
		flex-direction: row;
		justify-content: center;
		gap: 2rem;
		
		padding-top: 1%;
	}
	
	.swiper {
		color: white;
		transition: transform .3s;
		transform: scale(0.5)
	}

	#img1 {	
		display: block;
		opacity: 0.2;
		transition: all 5s ease-in-out;
		cursor:pointer;	
		transform-origin: top;
		
		
	}

	#imgcontainer{
		display: flex;
		width: 100%;
		max-width: 50vh;
		margin:auto;
		transition: all 5s ease-in-out;
		
		margin-bottom: 20%;
		flex-direction: column;
		
		
	}

	#imgandbutton{
		
		display: inline-block;
		width: 50%;
		max-width: 100%;
		margin:auto;
		position:relative;
		transition: all 5s ease-in-out;
	}


	#img2 {
		transition: transform .2s;
		cursor:pointer;
		border: 5px solid black;
	}
	#img3 {
		transition: transform .2s;
		cursor:pointer;
		border: 5px solid black;
	}
	
	.swiper-button-prev {
		color: black;
	}
	.swiper-button-next {
		color: black;
	}

	.swiper-slide
	{
		transition: transform .2s;
		margin-left: auto;
		margin-right: auto;
	}

	#playbutton{
		visibility: visible;
		margin: auto;
	}
	
	#pausebutton{
		visibility: hidden;
		margin: auto;
	}

	.controlbutton{
		display: block;
		margin-right: auto;
		margin-left: auto;
		opacity: 0.5;
		cursor:pointer;
		transition: opacity 0.5s ease-in-out;
	}

	.controlbutton:hover {
		opacity: 1;
	}

	.controlbutton:active {
		opacity: 1;
	}

	@media (min-width: 992px) {
		h1 {
			font-size: 3rem;
		}
		
	}
	@media (min-width: 768px) {
		h1 {
			font-size: 3rem;
		}
	}

	@media (min-width: 992px) {
		h2 {
			font-size: 3rem;
		}
		
	}
	@media (min-width: 768px) {
		h {
			font-size: 3rem;
		}
	}




		

</style>

<script>

	//test

	const img1 = document.querySelector("#img1");
	const button = document.querySelector("#Capa_1")

	const img1Obj = document.getElementById("imgandbutton");
	const pauseButton = document.getElementById("pausebutton");
	const playButton = document.getElementById("playbutton");

	function imageUp() {
		img1Obj.style.width = "100%";
		img1Obj.style.opacity = "1"
		pauseButton.style.visibility = "visible";
		playButton.style.visibility = "hidden";
	}
	function imageDown() {
		img1Obj.style.width = "40%";
		img1Obj.style.opacity = "0.2"
		pauseButton.style.visibility = "hidden";
		playButton.style.visibility = "visible";
	}


    img1.addEventListener('click', () => {
		console.log("it works");
		if (document.getElementById("pausebutton").style.visibility == "visible") {
			imageDown();
		} else {
			imageUp()	
		}

	});
	
    button.addEventListener('click', () => {
		console.log("it works");
		if (document.getElementById("pausebutton").style.visibility == "visible") {
			imageDown();
		} else {
			imageUp();
		}
		
	});
	

	
</script>

